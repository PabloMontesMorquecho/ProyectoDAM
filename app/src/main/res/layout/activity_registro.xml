<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Registro">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_plant"
        android:layout_marginTop="42dp"
        android:contentDescription="@string/app_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/huertapp"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="48sp"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etRegistroEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp">

    </EditText>

    <EditText
        android:id="@+id/etRegistroNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:hint="Usuario"
        android:inputType="text"
        android:minHeight="48dp">

    </EditText>

    <EditText
        android:id="@+id/etRegistroPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp">

    </EditText>

    <EditText
        android:id="@+id/etRegistroPasswordMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp">

    </EditText>

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:textColor="@color/accent"
        android:text="Registro">

    </Button>

    <ProgressBar
        android:id="@+id/pbCargando"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_gravity="center"
        android:layout_marginTop="-260dp"
        android:alpha="0.3"
        android:clickable="false"
        android:visibility="invisible">

    </ProgressBar>


</LinearLayout>