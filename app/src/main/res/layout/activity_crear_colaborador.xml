<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".CrearColaborador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_light"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCrearColaborador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Añadir colaborador">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp">

            <!-- Media -->
            <ImageView
                android:id="@+id/imgCrearColaborador"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:contentDescription="Imagen del huerto"
                android:scaleType="centerCrop"
                android:src="@drawable/subir_foto" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_margin="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Email Colaborador">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCrearColaboradorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnCrearColaborador"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/accent"
            android:text="AÑADIR COLABORADOR"/>

        <ProgressBar
            android:id="@+id/pbCrearColaboradorCargando"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginTop="-278dp"
            android:layout_gravity="center"
            android:alpha="0.3"
            android:clickable="false"
            android:visibility="invisible"/>


    </LinearLayout>
</ScrollView>